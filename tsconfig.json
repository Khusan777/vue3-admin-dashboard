{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "target": "es2015",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "composite": false,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "~/*/@": [ "src/*" ]
    },
    "lib": [
      "es5",
      "es6",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
